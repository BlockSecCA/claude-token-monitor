#!/bin/bash
# Claude Token Monitor Launcher (Linux/Mac)
# This is an EXAMPLE - modify paths for your system

echo "Starting Claude Token Monitor..."

# Change to your dashboard directory
cd /path/to/your/dashboard || exit

# Start Python server in background
python3 serve-monitor.py &
SERVER_PID=$!

# Wait for server to start
sleep 2

# Launch in browser (adapt for your browser)
if command -v xdg-open > /dev/null; then
    # Linux
    xdg-open "http://localhost:8080"
elif command -v open > /dev/null; then
    # macOS
    open "http://localhost:8080"
else
    echo "Please open http://localhost:8080 in your browser"
fi

echo "Token Monitor launched (PID: $SERVER_PID)"
echo "Press Ctrl+C to stop"

# Wait for interrupt
trap "kill $SERVER_PID; exit" INT
wait $SERVER_PID

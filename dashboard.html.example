<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Claude Token Monitor</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #1e1e1e 0%, #2d2d2d 100%);
            color: #e0e0e0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            background: #2a2a2a;
            border-radius: 16px;
            padding: 40px;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }
        
        h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 28px;
            color: #ffffff;
        }
        
        .stats { margin-bottom: 30px; }
        
        .stat-row {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #3a3a3a;
        }
        
        .stat-row:last-child { border-bottom: none; }
        
        .stat-label { color: #999; font-size: 14px; }
        .stat-value { font-size: 16px; font-weight: 600; color: #fff; }
        
        .progress-container { margin: 30px 0; }
        
        .progress-label {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            font-size: 14px;
        }
        
        .progress-bar-bg {
            background: #3a3a3a;
            height: 30px;
            border-radius: 15px;
            overflow: hidden;
        }
        
        .progress-bar {
            height: 100%;
            transition: all 0.5s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 14px;
        }
        
        .progress-bar.high { background: linear-gradient(90deg, #4ade80 0%, #22c55e 100%); }
        .progress-bar.medium { background: linear-gradient(90deg, #fbbf24 0%, #f59e0b 100%); }
        .progress-bar.low { background: linear-gradient(90deg, #ef4444 0%, #dc2626 100%); }
        
        .timestamp {
            text-align: center;
            color: #666;
            font-size: 14px;
            margin-top: 20px;
        }
        
        .refresh-time {
            text-align: center;
            color: #4ade80;
            font-size: 14px;
            margin-top: 10px;
            font-family: 'Courier New', monospace;
        }
        
        .status {
            text-align: center;
            padding: 10px;
            border-radius: 8px;
            margin-top: 20px;
            font-size: 13px;
            background: #1f3a1f;
            color: #4ade80;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>ðŸ”® Claude Token Monitor</h1>
        
        <div class="stats">
            <div class="stat-row">
                <span class="stat-label">Used</span>
                <span class="stat-value" id="used">--</span>
            </div>
            <div class="stat-row">
                <span class="stat-label">Total</span>
                <span class="stat-value" id="total">--</span>
            </div>
            <div class="stat-row">
                <span class="stat-label">Remaining</span>
                <span class="stat-value" id="remaining">--</span>
            </div>
        </div>
        
        <div class="progress-container">
            <div class="progress-label">
                <span>Token Usage</span>
                <span id="percentage">--%</span>
            </div>
            <div class="progress-bar-bg">
                <div class="progress-bar high" id="progressBar" style="width: 0%">
                    <span id="progressText">0%</span>
                </div>
            </div>
        </div>
        
        <div class="timestamp" id="timestamp">Last updated: --</div>
        <div class="refresh-time" id="refreshTime">Last refreshed: --</div>
        
        <div class="status">Auto-refreshing every 2 seconds</div>
    </div>
    
    <script>
        function formatNumber(num) {
            return num.toLocaleString();
        }
        
        function formatTimestamp(isoString) {
            return new Date(isoString).toLocaleString();
        }
        
        function getProgressBarClass(percentage) {
            if (percentage >= 50) return 'high';
            if (percentage >= 20) return 'medium';
            return 'low';
        }
        
        async function updateTokenData() {
            try {
                const response = await fetch('token-usage.json?t=' + Date.now());
                const data = await response.json();
                
                // Update stats
                document.getElementById('used').textContent = formatNumber(data.used);
                document.getElementById('total').textContent = formatNumber(data.total);
                document.getElementById('remaining').textContent = formatNumber(data.remaining);
                
                // Calculate used percentage
                const usedPercentage = 100 - data.percentage;
                document.getElementById('percentage').textContent = usedPercentage + '% used';
                document.getElementById('progressText').textContent = usedPercentage + '%';
                
                // Update progress bar
                const progressBar = document.getElementById('progressBar');
                progressBar.style.width = usedPercentage + '%';
                progressBar.className = 'progress-bar ' + getProgressBarClass(data.percentage);
                
                // Update timestamps
                document.getElementById('timestamp').textContent = 
                    'Last updated: ' + formatTimestamp(data.timestamp);
                document.getElementById('refreshTime').textContent = 
                    'Last refreshed: ' + new Date().toLocaleTimeString();
                
            } catch (error) {
                console.error('Error loading token data:', error);
            }
        }
        
        updateTokenData();
        setInterval(updateTokenData, 2000);
    </script>
</body>
</html>
